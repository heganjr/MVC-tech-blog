<!-- Loop over each object in the projects array -->
{{#each posts as |post|}}
  {{! posts as per homeRoutes ln 24 post ie: i - index }}
  <div class="row mb-4 project">
    <div class="col-md-5">
      <h2>
        <a href="/post/{{post.id}}">{{post.title}}</a>
        {{! Each clickable item of the post GOES TO THE SINGLE POST }}
        {{! id and title - column names from models - actually is data from posts variable lin 18 in HomeRoutes}}

      </h2>
      <p>Created by
        {{post.user.name}}
        on
        {{format_date post.date_created}}</p>
    </div>
    <div class="col-md-7">
      <p>
        {{post.description}}
      </p>
    </div>
  </div>
{{/each}}

